<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&family=Ubuntu:wght@300&display=swap" rel="stylesheet">

<style>
.topnav {
  background-color: #222831;
  overflow: hidden;
  font-family: 'Ubuntu', sans-serif;
  font-weight: 900;
  border-bottom-left-radius: 15px;  
  border-bottom-right-radius: 15px;  
}

.topnav a {
  transition: 0.5s;
  float: right;
  display: block;
  color: #DDDDDD;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 1.2rem;
  margin: 0 0.5rem 0 0.5rem;
  height: 1.7rem;
}

.topnav .brand{
    transition: 0.5s;
    float: left;
    font-size: 2.5rem;
    margin-left: 2%;
    display: block;
    position: relative;
    bottom: 12px;
}

.hidden-name{
    display: none;
    color: #F05454;
}

.topnav .brand:hover{
    transition: 0.5s;
}

.topnav .nav-link:hover {
  transition: 0.5s ;
  background-color: #F05454;
  color: #30475E;
  font-size: 1.4rem;
  border-radius: 20px;
  font-weight: 400;
}

.topnav .icon {
  display: none;
}

@media screen and (max-width: 600px) {
  .topnav a:not(:first-child) {display: none;}
  .topnav a.icon {
    float: right;
    display: block;
  }
}

@media screen and (max-width: 768px) {
  .topnav.responsive {
      position: relative;
    }
  .topnav.responsive a.icon {
    position: absolute;
    right: 0;
    top: 0;
  }
  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
  }
}
</style>

<div class="topnav" id="myTopnav">
    
    <a class="brand" href="/">
       mukul<span class="hidden-name">aryal</span>
    </a>
    <a href="javascript:void(0);" class="icon nav-link" onclick="myFunction()">
      <i class="fa fa-bars"></i>
    </a>
    <a class="nav-link" href="#about">About</a>
    <a class="nav-link" href="#contact">Contact</a>
    <a class="nav-link" href="#news">News</a>
    <a class="nav-link" href="/" class="active">Home</a>
</div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>

$(".brand").hover(function () {
       $(".hidden-name").slideToggle();
        
    }, function () {
        $(".hidden-name").slideToggle();
    }
);
  function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
  </script>